# Environment variables for AD Microglia Meta-Analysis
# Copy this file to .env and customize as needed

# Quality control parameters
QC_MIN_GENES=200
QC_MIN_CELLS=3
QC_MAX_MT_PERCENT=20
QC_MAX_GENES=5000
QC_MIN_COUNTS=1000

# Normalization
NORM_TARGET_SUM=10000

# Integration method (scvi or scanorama)
INTEGRATION_METHOD=scvi

# Plotting parameters
PLOT_DPI=300
PLOT_FORMAT=pdf,png

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Custom data directories
# BASE_DIR=/path/to/project
# DATA_DIR=/path/to/data
# RESULTS_DIR=/path/to/results
